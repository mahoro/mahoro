<%= stylesheet_link_tag "slides" %>

<div id="slides">
	<div class="ws_images">
    <% @slides.each_with_index do |slide, i| %>
      <%= link_to slide.link,
                  image_fu(slide.image, "960x360", :id => "wows#{i}") %>
    <% end %>
  </div>

  <div class="ws_bullets">
    <div>
      <% @slides.each_with_index do |slide, i| %>
        <%= link_to "#wows#{i}", image_fu(slide.image, "90x90") %>
      <% end %>
    </div>
  </div>
	<div class="ws_shadow"></div>
</div>

<%= javascript_include_tag "slides" %>
<% javascript_tag do -%>
jQuery("#slides").wowSlider({
  effect:       "stack",
  prev:         "",
  next:         "",
  duration:     10*100,
  delay:        50*100,
  outWidth:     960,
  outHeight:    360,
  width:        960,
  height:       360,
  autoPlay:     true,
  stopOnHover:  true,
  loop:         true,
  bullets:      true,
  caption:      true,
  controls:     true
});
<% end -%>
