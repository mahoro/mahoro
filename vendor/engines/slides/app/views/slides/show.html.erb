<% content_for :body_content_title do %>
  <%= @slide.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @slide.title %>
    </p>
  </section>
  <section>
    <h1>Image</h1>
    <p>
      <%= image_fu @slide.image, nil %>
    </p>
  </section>
  <section>
    <h1>Link</h1>
    <p>
      <%=raw @slide.link %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="slides">
      <% @slides.each do |slide| %>
        <li>
          <%= link_to slide.title, slide_path(slide) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
