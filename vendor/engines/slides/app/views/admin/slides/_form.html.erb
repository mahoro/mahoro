<%= form_for [:admin, @slide] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @slide,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :image -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :image_id,
          :image => @slide.image,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.slides.slide'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @slide.title)
              } %>
<% end -%>
